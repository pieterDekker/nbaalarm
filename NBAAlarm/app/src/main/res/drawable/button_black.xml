<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle"
            android:alpha="0.4">
            <corners
                android:radius="20px"
                />
            <gradient
                android:angle="360"
                android:startColor="#013996"
                android:centerColor="#028FD1"
                android:endColor="#920117"
                android:gradientRadius="360"
                android:type="sweep" />
        </shape>
    </item>
    <item
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp"
        android:top="4dp">
        <shape android:shape="rectangle"
            android:alpha="0.4">
            <corners
                android:radius="20px"
                />
            <solid android:color="#000" />
        </shape>
    </item>

</layer-list>