<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.smartsports.nbaalarm.activities.Alarm">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/alarm_tv_team_1"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dash"
        android:id="@+id/alarm_tv_dash"
        app:layout_constraintLeft_toRightOf="@+id/alarm_tv_team_1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/alarm_tv_team_2"
        app:layout_constraintLeft_toRightOf="@+id/alarm_tv_dash"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/alarm_tv_time"
        app:layout_constraintTop_toBottomOf="@+id/alarm_tv_team_1"/>

</android.support.constraint.ConstraintLayout>
